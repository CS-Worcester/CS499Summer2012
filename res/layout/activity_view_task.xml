<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical" >
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="4dp">
	    
	    <TextView
	        android:id="@+id/text_view_task_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_margin="4dp"
	        android:textSize="24sp"
	        android:textColor="#FFFFFF" />
	    	    
		<CheckBox 
		    android:id="@+id/checkbox_complete_task"
		    android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_below="@id/text_view_task_name"
	        android:layout_margin="4dp"
	        android:textSize="16sp"
		    android:text="@string/checkbox_complete"/>
	    
	    <ImageView
	        android:id="@+id/image_notes"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_below="@id/checkbox_complete_task"
	        android:layout_alignParentLeft="true"
	        android:layout_margin="4dp"
	        android:src="@drawable/ic_notes"
	        android:contentDescription="@string/image_notes" />
	    
	    <TextView
	        android:id="@+id/text_notes"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/checkbox_complete_task"
	        android:layout_toRightOf="@id/image_notes"
	        android:layout_margin="4dp"
	        android:textSize="16sp"
	        android:minHeight="40dp"
	        android:gravity="top|left" />
	    
	    <View
	        android:id="@+id/view_category"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_below="@id/text_notes"
	        android:layout_alignParentLeft="true"
	        android:layout_margin="4dp"
	        android:background="#ffffff"/>
	    
	    <TextView
	        android:id="@+id/text_category"
	        android:layout_width="match_parent"
	        android:layout_height="20dp"
	        android:layout_below="@id/text_notes"
	        android:layout_toRightOf="@id/view_category"
	        android:layout_margin="4dp"
	        android:textSize="14sp"
	        android:ellipsize="end"
	        android:maxLines="1"
	        android:gravity="center_vertical" />
	    
	    <ImageView
	        android:id="@+id/image_priority"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_below="@id/view_category"
	        android:layout_alignParentLeft="true"
	        android:layout_margin="4dp"
	        android:src="@drawable/ic_normal"
	        android:contentDescription="@string/image_priority" />
	    
	    <TextView
	        android:id="@+id/text_priority"
	        android:layout_width="wrap_content"
	        android:layout_height="20dp"
	        android:layout_below="@id/view_category"
	        android:layout_toRightOf="@id/image_priority"
	        android:layout_margin="4dp"
	        android:textSize="14sp"
	        android:gravity="center_vertical" />
	    
	    <ImageView
	        android:id="@+id/image_date"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_below="@id/image_priority"
	        android:layout_alignParentLeft="true"
	        android:layout_margin="4dp"
	        android:src="@drawable/ic_date"
	        android:contentDescription="@string/image_date" />
	    
	    <TextView
	        android:id="@+id/text_date_due"
	        android:layout_width="wrap_content"
	        android:layout_height="20dp"
	        android:layout_below="@id/image_priority"
	        android:layout_toRightOf="@id/image_date"
	        android:layout_margin="4dp"
	        android:textSize="14sp"
	        android:gravity="center_vertical" />
	    
	    <ImageView
	        android:id="@+id/image_alarm"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_below="@id/image_priority"
	        android:layout_toRightOf="@id/text_date_due"
	        android:layout_margin="4dp"
	        android:src="@drawable/ic_alarm"
	        android:contentDescription="@string/image_alarm" />
	    
	    <ImageView
	        android:id="@+id/image_repeat"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_below="@id/image_date"
	        android:layout_alignParentLeft="true"
	        android:layout_margin="4dp"
	        android:src="@drawable/ic_repeat"
	        android:contentDescription="@string/image_repeat" />
	    
	    <TextView
	        android:id="@+id/text_repeat"
	        android:layout_width="wrap_content"
	        android:layout_height="20dp"
	        android:layout_below="@id/image_date"
	        android:layout_toRightOf="@id/image_repeat"
	        android:layout_margin="4dp"
	        android:textSize="14sp"
	        android:gravity="center_vertical" />
	    
	</RelativeLayout>
	
</ScrollView>