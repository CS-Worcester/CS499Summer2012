<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    	<PreferenceScreen
    	    	android:key="edit_categories"
    	    	android:title="@string/pref_edit_categories"
    	    	android:summary="@string/pref_msg_edit_categories"
    	    	android:icon="@drawable/ic_category" />
    
    	<PreferenceCategory
    	    android:title="@string/pref_category_tasks">
    	    
    	    <CheckBoxPreference 
    	        android:key="auto_sort"
    	        android:title="@string/pref_auto_sort"
    	        android:icon="@drawable/ic_sort" />
    	    
    	    <CheckBoxPreference 
    	        android:key="custom_sort"
    	        android:title="@string/pref_custom_sort"
    	        android:icon="@drawable/ic_sort" /> 
    	        
       		<CheckBoxPreference 
	    	    android:key="hide_completed"
	    	    android:title="@string/pref_hide_completed"
	    	    android:icon="@drawable/ic_notes"
	    	    android:defaultValue="true" />
	    		    	    
	   	    <PreferenceScreen
	   	    	android:key="delete_finished_tasks"
	   	    	android:title="@string/pref_delete_finished_tasks"
	   	    	android:icon="@drawable/ic_delete"/>
	   	    	
	  	        <PreferenceScreen
	   	    	android:key="delete_all_tasks"
	   	    	android:title="@string/pref_delete_all_tasks"
	   	    	android:icon="@drawable/ic_delete"/>	    
    	    
    	</PreferenceCategory>
    	
    	<PreferenceCategory
    	    android:title="@string/pref_category_reminders">
    	    
	     	<ListPreference
	    	    android:key="reminder_time"
	    	    android:title="@string/pref_reminder_time"
	    	    android:dialogTitle="@string/pref_reminder_dialog"
	    	    android:icon="@drawable/ic_date"
	    	    android:entries="@array/pref_reminder_times"
	    	    android:entryValues="@array/pref_reminder_values" />
	    	
	    	<ListPreference
	    	    android:key="alarm_time"
	    	    android:title="@string/pref_alarm_time"
	    	    android:dialogTitle="@string/pref_alarm_dialog"
	    	    android:icon="@drawable/ic_alarm"
	    	    android:entries="@array/pref_alarm_times"
	    	    android:entryValues="@array/pref_alarm_values" />   	    
    	    
    	</PreferenceCategory>
 
</PreferenceScreen>
